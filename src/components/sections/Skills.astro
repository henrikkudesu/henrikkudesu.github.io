---
import { Image } from 'astro:assets';
---

<section
  id="tech"
  class="w-full py-20 bg-gradient-to-br from-[#F0EBCE] via-[#E5DFC3] to-[#D8D0B8]"
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-[#395144] mb-4">
        My Tech Stack
      </h2>
      <p class="text-xl text-[#4E6C50] max-w-3xl mx-auto">
        Technologies I've been working with recently
      </p>
    </div>

    <div
      class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6"
    >
      <!-- React -->
      <div
        class="tech-card group flex flex-col items-center p-6 bg-white/80 backdrop-blur-sm rounded-xl border border-[#AA8B56]/20 hover:border-[#AA8B56]/40 shadow-sm hover:shadow-md transition-all duration-300 hover:-translate-y-1"
      >
        <Image
          src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg"
          width={56}
          height={56}
          class="w-14 h-14 mb-4"
          alt="React"
        />
        <span
          class="font-medium text-[#395144] group-hover:text-[#AA8B56] transition-colors"
        >
          React
        </span>
      </div>

      <!-- Astro -->
      <div
        class="tech-card group flex flex-col items-center p-6 bg-white/80 backdrop-blur-sm rounded-xl border border-[#AA8B56]/20 hover:border-[#AA8B56]/40 shadow-sm hover:shadow-md transition-all duration-300 hover:-translate-y-1"
