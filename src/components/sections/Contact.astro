---
import SocialIcons from '../SocialIcons.astro';

const socialLinks = {
  github: 'https://github.com/henrikkudesu',
  linkedin: 'https://linkedin.com/in/leonardo-henrikku',
};
---

<section
  id="contact"
  class="w-full py-20 bg-gradient-to-br from-[#F0EBCE] via-[#E5DFC3] to-[#D8D0B8]"
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-[#395144] mb-4">
        Get In Touch
      </h2>
      <p class="text-xl text-[#4E6C50] max-w-2xl mx-auto">
        Have a project in mind or want to collaborate? Feel free to reach out!
      </p>
    </div>

    <div class="flex">
      <!-- Formulário -->

      <!-- Informações de Contato -->
      <div class="lg:w-1/2 mx-auto">
        <div
          class="bg-white/90 backdrop-blur-sm p-8 rounded-xl shadow-sm border border-[#AA8B56]/20 h-full"
        >
          <h3
            class="text-2xl font-bold text-[#395144] mb-8 pb-4 border-b border-[#AA8B56]/20"
          >
            Contact Information
          </h3>

          <div class="space-y-8">
            <!-- Email -->
            <div class="flex items-start">
              <div
                class="flex-shrink-0 h-12 w-12 rounded-full bg-[#4E6C50]/10 flex items-center justify-center text-[#4E6C50]"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div class="ml-4">
                <h4
                  class="text-sm font-medium text-[#4E6C50] uppercase tracking-wider"
                >
                  Email
                </h4>
                <a
                  href="mailto:leo_hns@hotmail.com"
                  class="text-lg text-[#395144] hover:text-[#AA8B56] transition-colors"
                >
                  leo_hns@hotmail.com
                </a>
              </div>
            </div>

            <!-- Address -->
            <div class="flex items-start">
              <div
                class="flex-shrink-0 h-12 w-12 rounded-full bg-[#4E6C50]/10 flex items-center justify-center text-[#4E6C50]"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h4
                  class="text-sm font-medium text-[#4E6C50] uppercase tracking-wider"
                >
                  Location
                </h4>
                <p class="text-lg text-[#395144]">Guaratinguetá, SP - Brazil</p>
              </div>
            </div>

            <!-- Social -->
            <div class="flex items-start">
              <div
                class="flex-shrink-0 h-12 w-12 rounded-full bg-[#4E6C50]/10 flex items-center justify-center text-[#4E6C50]"
              >
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                  ></path>
                </svg>
              </div>

              <div class="ml-4">
                <h4
                  class="text-sm font-medium text-[#4E6C50] uppercase tracking-wider mb-3"
                >
                  Social
                </h4>
                <div class="flex gap-4">
                  <SocialIcons
                    socialLinks={socialLinks}
                    class="w-10 h-10 rounded-full bg-[#4E6C50]/10 text-[#4E6C50] hover:bg-[#4E6C50] hover:text-[#F0EBCE] transition-colors duration-300 flex items-center justify-center"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
